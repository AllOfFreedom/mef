<Window x:Class="UITreeCompositionDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TabControl HorizontalAlignment="Left" Height="265" Margin="10,37,0,0" VerticalAlignment="Top" Width="489">
            <TabItem Header="Bind to Name on ViewModel">
                <Grid Background="#FFE5E5E5">
                    <Label Content="Bind to Name on ViewModel" HorizontalAlignment="Left" Height="27" Margin="150,96,0,0" VerticalAlignment="Top" Width="168"/>
                </Grid>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        <Button Content="Create Tab" HorizontalAlignment="Left" Margin="172,10,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBox HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="157"/>
        <Button Content="Close Tab" HorizontalAlignment="Left" Margin="252,10,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
